<div id="<%= dom_id group %>">
  <p>
    <strong>Name:</strong>
    <%= group.name %>
  </p>
  <p>
    <strong>Icon:</strong>
    <% if group.icon.attached? %>
      <%= image_tag(group.icon, class: "w-50 h-50") %>
    <% end %>
  </p>
  <p>
    <strong>User:</strong>
    <%= group.author_id %>
  </p>
</div>
